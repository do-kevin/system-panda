{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"overrides": [],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"indent": ["warn", "tab"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-mixed-spaces-and-tabs": "warn"
	},
	"ignorePatterns": ["**/build/*", "**/node_modules/*"]
}
